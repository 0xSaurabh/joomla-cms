		label="plugins" >
		<option value="">JOPTION_USE_DEFAULT</option>
	</field>
	
	<field name="myradiovalue" type="radio" default="0" label="radio">
	  <option value="0">1</option>
	  <option value="1">2</option>
	</field>
	
	<field 
		name="range" 
		type="range" 
		default="1" 
		label="range" 
		description="" 
		min="1" 
		max="10" 
		step="1"
	/>
	
	<field name="session_handler" type="sessionhandler"
	default="none"
	label="sessionhandler"
	required="true"
	filter="word" />
	
	<field type="spacer" name="myspacer" hr="true" />
	
	<field name="tags" type="tag" label="tag" mode="ajax" class="inputbox span12 small" multiple="true" />
	
