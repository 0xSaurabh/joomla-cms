	<field name="mymenu" type="menu" default="mainmenu" label="menu" />
	
	<field name="mymenuitem" type="menuitem" default="45" label="menuitem" />
	
	<field name="meter"
	   active="true"
	   type="meter"
	   label="Meter"
	   max="1000"
	   min="1"
	   step="10"
	   default="240"
