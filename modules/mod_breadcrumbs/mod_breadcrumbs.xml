		<option value="chor">Chorizo</option>
		<option value="on">Onions</option>
		<option value="mush">Mushrooms</option>
	</field>
	
	<field name="style" type="chromestyle"
		label="chrome style"
	/>
	
	<field name="backgroundcolor" type="color" default="#eee"
		label="color"
	/>

	<field name="types" type="contenttype"
		label="content type"
		multiple="true"
	/>
	
	<field name="myeditbox" type="combo" label="combo" size="7">
		<option value="1">Option 1</option>
		<option value="2">Option 2</option>
	</field>
	
	<field name="mylayout" type="componentlayout" extension="com_content" view="article" label="componentlayout" useglobal="true" />
	
	<field name="language" type="contentlanguage"
		label="JFIELD_LANGUAGE_LABEL"
		class="span12" >
		<option value="*">JALL</option>
	</field>
	
	<field name="dbtype" type="databaseconnection"
	label="databaseconnection"
	supported="mysql,mysqli,postgresql,sqlsrv,sqlazure"
	filter="string" />
	
	<field name="myeditor" type="editors" default="none" label="editors" />
	
	<field name="email" type="email"
		label="JGLOBAL_EMAIL"
		required="true"
		size="30"
		class="inputbox"
		validate="email" />
					
	<field name="myfilevalue" type="file" label="file" size="10" accept="image/*" />
	
	<field name="myfile" type="filelist" default="" label="filelist" directory="administrator" filter="" exclude="" stripext="" />
	
	<field name="myfolder" type="folderlist" default="" label="folderlist" directory="administrator" filter="" exclude="" stripext="" />
	
