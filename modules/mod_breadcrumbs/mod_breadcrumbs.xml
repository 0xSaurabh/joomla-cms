		type="tel"
		id="contact-telephone"
		size="30"
		label="tel"
		filter="string"
		required="true"
	/>
	
	<field name="admin_style" type="templatestyle"
		client="administrator"
		description="templatestyle">
			<option value="">JOPTION_USE_DEFAULT</option>
	</field>
	
	<field name="mytextvalue" type="text" default="text" label="Enter some text" size="10" />
	
	<field name="mytextarea" type="textarea" default="default" label="textarea" rows="10" cols="5" />
	
	<field name="mytimezone" type="timezone" default="-10" label="timezone" />
	
	<field name="mytextvalue" type="url" default="http://www.example.com" label="URL" description="" size="10" />
	
	<field name="modified_user_id" type="user"
	label="user"
	class="readonly"
	readonly="true"
	filter="unset" />
	
	<field name="guest_usergroup" type="usergroup"
	label="usergroup"
	multiple="true" />
	
	
				
</fieldset>
			
			
			
			
			
		</fields>
